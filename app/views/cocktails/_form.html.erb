<%= simple_form_for(@cocktail) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="photo-uploader">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions btn btn-outline-success">
    <%= f.button :submit %>
  </div>
<% end %>




